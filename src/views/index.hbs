<div class="card">

  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i> Sube un Producto
    </h3>
  </div>

  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" required/>
            <label class="custom-file-label" for="inputGroupFile">Selecciona una imagen</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Titulo del Producto" required>
      </div>
      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="DescripciÃ³n del Producto" required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i> Subir Producto
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-2 mb-2 shadow p-0 bg-white">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i> Subidas Recientes</h3>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/{{ uniqueId  }}">
          <img src="/public/upload/{{filename}}" alt="{{title}}" class="w-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>
